[Unit]
Description=pgagent unit file for database %i
After=postgresql.service

[Service]
CPUAccounting=yes
MemoryAccounting=yes
TasksAccounting=yes
Type=forking
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=pgagent_%i
User=postgres
Group=postgres
EnvironmentFile=/etc/pgagent/%i.conf
PermissionsStartOnly=true
ExecStart=/usr/bin/pgagent -s /var/log/pgagent/%i.log -t ${PG_AGENT_POLL_INTERVAL} -r ${PG_AGENT_RETRY_PERIOD} -l ${PG_AGENT_LOG_VERBOSITY} dbname=%i user=postgres port=${PG_AGENT_TARGET_PORT}
Restart=on-failure

[Install]
WantedBy=multi-user.target